// Monostyle User Configuration
{
	"tool_selection": {
		"markup": {
			"tools": ["directive", "heading-level", "indention", "kbd", "leak"],
			"ext": ".rst"
		},
		"listsearch": {
			"tools": ["simplify", "blender/UI", "blender/Editors", "blender/Modes", "avoid/*", "dev/*"],
			"ext": ".rst"
		},
		"spelling": {
			"tools": ["new-word"],
			"ext": ".rst"
		},
		"capitalization": {
			"tools": ["heading-caps", "start-case", "pos-case", "ui"],
			"ext": ".rst"
		},
		"punctuation": {
			"tools": ["number", "pairs", "mark", "whitespace"],
			"ext": ".rst"
		},
		"char": {
			"tools": ["char-search"],
			"ext": ".rst"
		},
		"natural": {
			"tools": ["article", "grammar", "hyphen", "metric", "overuse", "repeated"],
			"ext": ".rst"
		},
		"code_style": {
			"tools": ["heading-line-length", "flavor", "line-style", "long-line", "blank-line", "style-add"],
			"ext": ".rst"
		},
		"monitor": {
			"tools": ["monitor"],
			"ext": ""
		}
	},

	// Project Directories
	// -------------------

	"rst_dir": "manual",
	"po_dir": "locale",
	"build_dir": "build",
	"img_dir": "manual/images",


	// Console Output
	// --------------

	"console_options": {
		"file_title": true,
		"file_title_underline": "-",
		"compact": true,
		"show_summary": true,
		"summary_overline": "_",

		"format_str": "{filename}{location} {severity} {output} {message} {fix}{line}",
		"show_filename": true,
		"absolute_path": true,
		"filename_separator": ":",

		"show_end": false,
		"location_span_separator": " - ",
		"location_column_separator": ":",

		// options: 'long', 'letter', 'ascii', 'icon', 'emoji', 'color', 'shape'
		"severity_display": "long",

		"output_separator_start": "´",
		"output_separator_end": "´",
		"output_limit": 100,
		"output_ellipsis": "…",

		"show_line": true,
		"line_limit": 200,
		"line_indent": ">>>",
		"line_ellipsis": "…",

		"show_autofix": true,
		// options: same as severity_display
		"autofix_display": "long"
	},

	// Tool Config Override
	// --------------------

	// module name : {function name : {variable name: variable value}}
	"config_override": {
	},

	// Message Template Override
	// -------------------------

	// template name : string
	"template_override": {
	}
}
